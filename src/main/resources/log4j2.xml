<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <Console name="ConsoleAppender" target="SYSTEM_OUT">
            <PatternLayout
                    pattern="%d [%t] %style{%-5level}{red} %logger{36} - %msg%n%throwable"/>
        </Console>
    </Appenders>
    <Loggers>
        <Root>
            <AppenderRef ref="ConsoleAppender" level="ERROR"/>
        </Root>
    </Loggers>
</Configuration>